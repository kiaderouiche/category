#!/bin/sh
tools_wrapper_sed=/bin/sed
shquote()
{
	shquoted=$1
	case $shquoted in
	*\'*)
		shquoted=`$tools_wrapper_sed -e "s,','\\\\\\\\'',g" <<EOF
$shquoted
EOF`
	esac
	case $shquoted in
	(*[!!%+,\-./0-9:=@A-Z_a-z]*|'')
		case $shquoted in
		(*=*)	lhs=${shquoted%%=*}
			case $lhs in
			(*[!!%+,\-./0-9:=@A-Z_a-z]*|'') ;;
			(*)	shquoted="$lhs='${shquoted#*=}'"
				return
			esac
		esac
		shquoted="'$shquoted'"
	esac
}
shquote_args() {
	shquoted_args=''
	for arg in "$@"; do
		shquote "$arg"
		shquoted_args="$shquoted_args $shquoted"
	done
}
wrapperlog="${TOOLS_WRAPPER_LOG-/usr/pkgsrc/category/go-ffmpeg/work/.work.log}"
shquote_args "$@"
echo "[*] "/usr/pkgsrc/category/go-ffmpeg/work/.tools/bin/perl"$shquoted_args" >> $wrapperlog
logprefix="set args$shquoted_args; shift; "
logmain=echo\ \>\>\ /usr/pkgsrc/category/go-ffmpeg/work/.warning/perl\ \"Please\ add\ USE_TOOLS+=perl\ to\ the\ package\ Makefile.\"\;\ \ /bin/sh\ /usr/pkgsrc/mk/scripts/fail\ echo\ 1\>\&2\ \"ERROR:\"\ \"To\ use\ this\ tool,\ add\ USE_TOOLS+=perl\ to\ the\ package\ Makefile.\"
echo '<.>' "$logprefix$logmain" >> $wrapperlog
echo >> /usr/pkgsrc/category/go-ffmpeg/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /usr/pkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."
